@import './theme.styl'

:global
  html, body
    font-family 'Roboto-light'
    letter-spacing 0.6px
    font-size px2rem(12)

  .abs
    position absolute
  
  .show
    opacity 1 !important
  
  .hide
    opacity 0 !important

  .none
    display none

  .transition1
    transition all .3s ease
  
  .transition2
    transition opacity .3s ease

  h2 
    font-size px2rem(48)