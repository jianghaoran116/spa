@import '../../../styles/theme.styl'

.wrap
  width 100%
  height auto
  min-height px2rem(160)
  margin 0
  background #ffffff
  display flex
  flex-direction row
  justify-content space-between
  align-items center
  border-top px2rem(2) solid #f5f5f9

  .left
    flex-grow 1
    text-align left
    margin 0 0 0 px2rem(40)
    padding px2rem(30) 0

    .time
      font-size px2rem(24)
      line-height px2rem(30)
      color #555555
    
    .title
      margin px2rem(10) 0 0 0
      font-size px2rem(40)
      line-height px2rem(48)
      color #111111

  .right
    width px2rem(160)
    height px2rem(160)
    margin 0 px2rem(40)
    flex-shrink 0
    display flex
    align-self flex-end
    justify-content center
    align-items flex-end
    padding 0 0 px2rem(20) 0
    
    a
      color #007AFF
      font-size px2rem(28)

      .iconfont
        font-size px2rem(56)
        color #555555
        margin 0 auto
        text-align center
        font-weight normal