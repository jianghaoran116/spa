@import '../../../styles/theme.styl'

$shadowColor = #AEAEAE

.wrap
  width px2rem(700)
  height auto
  min-height px2rem(350)
  background #ffffff
  margin px2rem(40) auto
  display flex
  flex-direction column
  justify-content space-between

  .top
    z-index 0
    flex-grow 1
    box-shadow 0 0 px2rem(10) 0 $shadowColor
    border-radius px2rem(10) px2rem(10) 0 0
    padding px2rem(30) px2rem(54) px2rem(15) px2rem(54)

    .top-content
      display flex
      flex-direction row
      line-height px2rem(34)
      margin-bottom px2rem(20)

      .left 
        flex-shrink 0
        color #888888
        width px2rem(140)

      .right 
        flex-grow 1
        color #111111
  
  .top-hidden
    height px2rem(100)
  
  .middle
    display flex
    flex-direction row 
    justify-content space-between
    align-items center
    height px2rem(40)
    overflow hidden
    background #fff
    z-index 10

    .left
      flex-grow 0
      width px2rem(40)
      height px2rem(40)
      margin-left px2rem(-20)
      border-radius 0 px2rem(20) px2rem(20) 0
      background #f5f5f9
      box-shadow inset 0 0 px2rem(10) 0 $shadowColor

    .right
      flex-grow 0
      width px2rem(40)
      height px2rem(40)
      margin-right px2rem(-20)
      border-radius px2rem(20) 0 0 px2rem(20)
      background #f5f5f9
      box-shadow inset 0 0 px2rem(10) 0 $shadowColor

    .hash-line
      flex-grow 1
      height px2rem(2)
      border-top px2rem(2) dotted #979797
      margin 0 px2rem(4)

  .bottom
    box-shadow 0 0 px2rem(10) 0 $shadowColor
    border-radius 0 0 px2rem(10) px2rem(10)
    padding px2rem(15) 0 px2rem(30) 0
    text-align center

    p 
      font-size px2rem(24)
      cursor pointer