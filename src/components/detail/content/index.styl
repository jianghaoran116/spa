@import '../../../styles/theme.styl'

.wrap
  width 100%
  background #ffffff
  height auto
  min-height px2rem(560)
  flex-grow 1

  .title
    padding px2rem(26) px2rem(46)

    p
      line-height px2rem(40)
      font-weight bold
      color #0F1D37

      span 
        padding 0 0 0 px2rem(10)
        color #E14C46

  .content
    border-top px2rem(2) solid #f4f4f4
    padding 0 0 0 px2rem(40)

    .content-list
      border-top px2rem(2) solid #f4f4f4
      line-height px2rem(40)

      &:nth-child(1)
        border-top 0

      .top 
        padding px2rem(20) 0
        display flex
        color #111111

        .left 
          flex-grow 1
          padding 0 px2rem(40) 0 0

        .right 
          flex-shrink 0
          flex-basis px2rem(240)
          padding 0 px2rem(40) 0 0
          text-align right

      .bottom
        padding 0 0 px2rem(20) 0
        color #888888