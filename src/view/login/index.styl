:global{
  .ant-form-item{
    margin-bottom: 15px;
  }
}

.linked-animate-demo-wrapper {
  overflow: hidden;
  width: 100%;
  height: 100%;
  background: #019BF0;
  position: absolute;
}

.linked-animate-demo-box {
  position: absolute;
  width: 1920px;
  height: 1080px;
  display: block;
  left: -100%;
  top: 0;
  bottom: 0;
  right: -100%;
  margin: auto;
}

.linked-animate-demo-block {
  position: absolute;
  transition: transform .45s ease;
}

.linked-animate-demo-block-child {
  border-radius: 100%;
  width: 100%;
  height: 100%;
}

.login-wrap{
  position: absolute;
  width: 320px;
  // height: 180px;
  top: 50%;
  left: 50%;
  margin-left: -160px;
  margin-top: -90px;
  background-color: rgba(255,255,255,0.5);
  border-radius: 5px;
}
.login-content{
  align-content: center;
  margin: 20px;
}