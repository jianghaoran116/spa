@import '../../../styles/theme.styl'

@keyframes ant-skeleton-loading {
  0% {
    background-position 100% 50%
  }
  100% {
    background-position 0 50%
  }
}

.detail-skeleton
  position absolute
  left 0
  top 0
  right 0
  bottom 0
  background #f5f5f9
  overflow auto
  font-size px2rem(28)

.skeleton-content
  width 100%
  height px2rem(40)
  background linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 37%, #f2f2f2 63%)
  background-size 400% 100%
  animation ant-skeleton-loading 1.4s ease infinite

$shadowColor = #AEAEAE

.detail-top-wrap
  width px2rem(700)
  height auto
  min-height px2rem(350)
  background #ffffff
  margin px2rem(40) auto
  display flex
  flex-direction column
  justify-content space-between

  .top
    z-index 0
    flex-grow 1
    box-shadow 0 0 px2rem(10) 0 $shadowColor
    border-radius px2rem(10) px2rem(10) 0 0
    padding px2rem(30) px2rem(54) px2rem(15) px2rem(54)

    .top-content
      display flex
      flex-direction row
      line-height px2rem(34)
      margin-bottom px2rem(20)

      .left 
        flex-shrink 0
        color #888888
        width px2rem(140)

      .right 
        flex-grow 1
        color #111111
        margin 0 0 0 px2rem(40)
  
  .top-hidden
    height px2rem(100)
  
  .middle
    display flex
    flex-direction row 
    justify-content space-between
    align-items center
    height px2rem(40)
    overflow hidden
    background #fff
    z-index 10

    .left
      flex-grow 0
      width px2rem(40)
      height px2rem(40)
      margin-left px2rem(-20)
      border-radius 0 px2rem(20) px2rem(20) 0
      background #f5f5f9
      box-shadow inset 0 0 px2rem(10) 0 $shadowColor

    .right
      flex-grow 0
      width px2rem(40)
      height px2rem(40)
      margin-right px2rem(-20)
      border-radius px2rem(20) 0 0 px2rem(20)
      background #f5f5f9
      box-shadow inset 0 0 px2rem(10) 0 $shadowColor

    .hash-line
      flex-grow 1
      height px2rem(2)
      border-top px2rem(2) dotted #979797
      margin 0 px2rem(4)

  .bottom
    box-shadow 0 0 px2rem(10) 0 $shadowColor
    border-radius 0 0 px2rem(10) px2rem(10)
    padding px2rem(15) 0 px2rem(30) 0
    text-align center

    p 
      margin 0 auto
      width px2rem(200)
      font-size px2rem(24)
      cursor pointer
      


.detail-content-wrap
  width 100%
  background #ffffff
  height auto
  min-height px2rem(560)
  flex-grow 1

  .title
    padding px2rem(26) px2rem(46)

    p
      line-height px2rem(40)
      font-weight bold
      color #0F1D37

      span 
        padding 0 0 0 px2rem(10)
        color #E14C46

  .content
    border-top px2rem(2) solid #f4f4f4
    padding 0 0 0 px2rem(40)

    .content-list
      border-top px2rem(2) solid #f4f4f4
      line-height px2rem(40)

      &:nth-child(1)
        border-top 0

      .top 
        padding px2rem(20) 0
        display flex
        color #111111

        .left 
          flex-grow 1
          padding 0 px2rem(40) 0 0

        .right 
          flex-shrink 0
          flex-basis px2rem(240)
          padding 0 px2rem(40) 0 0
          text-align right

      .bottom
        padding 0 px2rem(40) px2rem(20) 0
        color #888888

.detail-footer-wrap
  width 100%
  background #ffffff
  height auto
  min-height px2rem(150)
  padding px2rem(10) 0
  margin px2rem(40) 0

  .list
    padding px2rem(10) 0
    line-height px2rem(34)
    display flex 
    align-items flex-end 
  
    .type
      width px2rem(100)
      font-size px2rem(24)
      color #111111
      font-weight bold
      padding 0 0 0 px2rem(48)

    .name
      width px2rem(200)
      font-size px2rem(28)
      color #111111
      font-weight bold
      padding 0 px2rem(20)

    .time
      width px2rem(100)
      font-size px2rem(24)
      color #555555